#include <stdio.h>

int main() {
    int n, i, a[10][10], t;
    printf("Introdu numarul de linii/coloane: ");
    scanf_s("%d", &n);
    printf("Introdu elementele matricii:\n");
    for (i = 0; i < n; i++)
        for (int j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    for (i = 0; i < n; i++) {
        t = a[i][i];
        a[i][i] = a[i][n - 1 - i];
        a[i][n - 1 - i] = t;
    }
    printf("Matricea dupa schimbarea diagonalelor:\n");
    for (i = 0; i < n; i++) {
        for (int j = 0; j < n; j++) printf("%d ", a[i][j]);
        printf("\n");
    }
    return 0;
}
 
