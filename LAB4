    int a[2][2], det;
    printf("Introdu elementele matricii 2x2:\n");
    for (int i = 0; i < 2; i++)
        for (int j = 0; j < 2; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    det = a[0][0] * a[1][1] - a[0][1] * a[1][0];
    printf("Determinantul: %d\n", det);
    return 0;
}
 
