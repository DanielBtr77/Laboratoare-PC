        printf("Introdu elementul %d: ", i);
        scanf_s("%d", &a[i]);
    }
    printf("Introdu elementul de cautat: ");
    scanf_s("%d", &x);
    printf("Pozitiile elementului %d: ", x);
    for (i = 0; i < n; i++)
        if (a[i] == x) printf("%d ", i);
    return 0;
}
 
Figura 2.8 Cautarea unui element
   19. Scrieți un program C pentru a sorta elementele tabloului în ordine crescătoare sau descrescătoare.

Codul sursă 19:
#include <stdio.h>

int main() {
    int n, a[100], i, j, s;
    printf("Introdu numarul de elemente: ");
    scanf_s("%d", &n);
    for (i = 0; i < n; i++) {
        printf("Introdu elementul %d: ", i);
        scanf_s("%d", &a[i]);
    }
    printf("1 pentru crescator, 2 pentru descrescator: ");
    scanf_s("%d", &s);
    for (i = 0; i < n - 1; i++)
        for (j = i + 1; j < n; j++)
            if ((s == 1 && a[i] > a[j]) || (s == 2 && a[i] < a[j])) {
                int t = a[i];
                a[i] = a[j];
                a[j] = t;
            }
    printf("Tabloul sortat: ");
    for (i = 0; i < n; i++) printf("%d ", a[i]);
    return 0;
}
 
Figura 2.9 Sortarea elementelor tabloului
   20. Scrieți un program C pentru a sorta separat elementele pare și impare ale tabloului.
Codul sursă 20:
#include <stdio.h>

int main() {
    int n, a[100], i, j;
    printf("Introdu numarul de elemente: ");
    scanf_s("%d", &n);
    for (i = 0; i < n; i++) {
        printf("Introdu elementul %d: ", i);
        scanf_s("%d", &a[i]);
    }
    for (i = 0; i < n - 1; i++)
        for (j = i + 1; j < n; j++)
            if (a[i] % 2 == 0 && a[j] % 2 == 0 && a[i] > a[j]) {
                int t = a[i]; a[i] = a[j]; a[j] = t;
            }
    for (i = 0; i < n - 1; i++)
        for (j = i + 1; j < n; j++)
            if (a[i] % 2 == 1 && a[j] % 2 == 1 && a[i] > a[j]) {
                int t = a[i]; a[i] = a[j]; a[j] = t;
            }
    printf("Tabloul sortat separat: ");
    for (i = 0; i < n; i++) printf("%d ", a[i]);
    return 0;
}
 
Figura 3.0 Sortarea separata pare si impare
   21. Scrieți un program C pentru a roti la stânga un tablou, operația ROL.
Codul sursă 21:
#include <stdio.h>

int main() {
    int n, a[100], i, k;
    printf("Introdu numarul de elemente: ");
    scanf_s("%d", &n);
    for (i = 0; i < n; i++) {
        printf("Introdu elementul %d: ", i);
        scanf_s("%d", &a[i]);
    }
    printf("Introdu cate pozitii sa roteasca la stanga: ");
    scanf_s("%d", &k);
    k %= n;
    for (i = 0; i < k; i++) {
        int t = a[0], j;
        for (j = 0; j < n - 1; j++) a[j] = a[j + 1];
        a[n - 1] = t;
    }
    printf("Tabloul dupa rotire la stanga: ");
    for (i = 0; i < n; i++) printf("%d ", a[i]);
    return 0;
}
 
Figura 3.1 Rotirea la stanga a unui tablou

22. Scrieți un program C pentru a roti dreapta un tablou, operația ROR.	

Codul sursă 22:
#include <stdio.h>

int main() {
    int n, a[100], i, k;
    printf("Introdu numarul de elemente: ");
    scanf_s("%d", &n);
    for (i = 0; i < n; i++) {
        printf("Introdu elementul %d: ", i);
        scanf_s("%d", &a[i]);
    }
    printf("Introdu cate pozitii sa roteasca la dreapta: ");
    scanf_s("%d", &k);
    k %= n;
    for (i = 0; i < k; i++) {
        int t = a[n - 1], j;
        for (j = n - 1; j > 0; j--) a[j] = a[j - 1];
        a[0] = t;
    }
    printf("Tabloul dupa rotire la dreapta: ");
    for (i = 0; i < n; i++) printf("%d ", a[i]);
    return 0;
}
 
Figura 3.2 Rotirea la dreapta a unui tablou
23. Scrieți un program C pentru a aduna două matrice.

Codul sursă 23:
#include <stdio.h>

int main() {
    int m, n, i, j, a[10][10], b[10][10], c[10][10];
    printf("Introdu numarul de linii: ");
    scanf_s("%d", &m);
    printf("Introdu numarul de coloane: ");
    scanf_s("%d", &n);
    printf("Introdu elementele primei matrici:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    printf("Introdu elementele celei de-a doua matrici:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &b[i][j]);
        }
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++)
            c[i][j] = a[i][j] + b[i][j];
    printf("Matricea rezultata:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) printf("%d ", c[i][j]);
        printf("\n");
    }
    return 0;
}
 
Figura 3.3 Adunarea a 2 matrici

24. Scrieți un program C pentru a scădea două matrice.

Codul sursă 24:
#include <stdio.h>

int main() {
    int m, n, i, j, a[10][10], b[10][10], c[10][10];
    printf("Introdu numarul de linii: ");
    scanf_s("%d", &m);
    printf("Introdu numarul de coloane: ");
    scanf_s("%d", &n);
    printf("Introdu elementele primei matrici:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    printf("Introdu elementele celei de-a doua matrici:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &b[i][j]);
        }
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++)
            c[i][j] = a[i][j] - b[i][j];
    printf("Matricea rezultata:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) printf("%d ", c[i][j]);
        printf("\n");
    }
    return 0;
}
 

Figura 3.4 Scaderea a 2 matrici

   25. Scrieți un program C pentru a efectua multiplicarea matricei cu un scalar.
Codul sursă 25:
#include <stdio.h>

int main() {
    int m, n, i, j, a[10][10], c[10][10], k;
    printf("Introdu numarul de linii: ");
    scanf_s("%d", &m);
    printf("Introdu numarul de coloane: ");
    scanf_s("%d", &n);
    printf("Introdu elementele matricii:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    printf("Introdu scalarul: ");
    scanf_s("%d", &k);
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++)
            c[i][j] = a[i][j] * k;
    printf("Matricea rezultata:\n");
    for (i = 0; i < m; i++) {
        for (j = 0; j < n; j++) printf("%d ", c[i][j]);
        printf("\n");
    }
    return 0;
}
 
Figura 3.5 Multiplicarea prin scalar a unei matrici

   26. Scrieți un program C pentru a multiplica două matrice.
Codul sursă 26:
#include <stdio.h>

int main() {
    int m1, n1, m2, n2, i, j, k, a[10][10], b[10][10], c[10][10] = { 0 };
    printf("Introdu numarul de linii pentru prima matrice: ");
    scanf_s("%d", &m1);
    printf("Introdu numarul de coloane pentru prima matrice: ");
    scanf_s("%d", &n1);
    printf("Introdu elementele primei matrici:\n");
    for (i = 0; i < m1; i++)
        for (j = 0; j < n1; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    printf("Introdu numarul de linii pentru a doua matrice: ");
    scanf_s("%d", &m2);
    printf("Introdu numarul de coloane pentru a doua matrice: ");
    scanf_s("%d", &n2);
    if (n1 != m2) { printf("Nu se poate inmulti!"); return 0; }
    printf("Introdu elementele celei de-a doua matrici:\n");
    for (i = 0; i < m2; i++)
        for (j = 0; j < n2; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &b[i][j]);
        }
    for (i = 0; i < m1; i++)
        for (j = 0; j < n2; j++)
            for (k = 0; k < n1; k++)
                c[i][j] += a[i][k] * b[k][j];
    printf("Matricea rezultata:\n");
    for (i = 0; i < m1; i++) {
        for (j = 0; j < n2; j++) printf("%d ", c[i][j]);
        printf("\n");
    }
    return 0;
}
 
Figura 3.6 Multiplicarea a 2 matrici
   27. Scrieți un program C pentru a verifica dacă două matrice sunt egale sau nu.
Codul sursă 27:
#include <stdio.h>

int main() {
    int m, n, i, j, a[10][10], b[10][10], ok = 1;
    printf("Introdu numarul de linii: ");
    scanf_s("%d", &m);
    printf("Introdu numarul de coloane: ");
    scanf_s("%d", &n);
    printf("Introdu elementele primei matrici:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &a[i][j]);
        }
    printf("Introdu elementele celei de-a doua matrici:\n");
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++) {
            printf("Element [%d][%d]: ", i, j);
            scanf_s("%d", &b[i][j]);
        }
    for (i = 0; i < m; i++)
        for (j = 0; j < n; j++)
            if (a[i][j] != b[i][j]) ok = 0;
    if (ok) printf("Matricile sunt egale\n");
    else printf("Matricile nu sunt egale\n");
    return 0;
}
 
