int main() {
    int n;

    printf("Introduceti un numar: ");
    scanf_s("%d", &n);

    if (n > 0)
        printf("Numarul este pozitiv.\n");
    else if (n < 0)
        printf("Numarul este negativ.\n");
    else
        printf("Numarul este zero.\n");

    return 0;
}
 
